extends layout/layout
block vars
    -title = 'NamePage'
    -mainClass = 'page-template'
    -bodyClass = ''
    -hdClass = ''

block container

    //- hambuger
    h1(style="font-size: 2rem; font-weight: 700") hambuger
    br
    .hd-bar.hamBlock(style="display: block")
        .ham.hamTarget 
            svg(
                viewBox="0 0 100 100" 
                class="menu-svg"
                )
                path(
                d="m 30,33 h 40 c 3.722839,0 7.5,3.126468 7.5,8.578427 0,5.451959 -2.727029,8.421573 -7.5,8.421573 h -20"
                )
                path.path-2(d="m 30,50 h 40")
                path(
                d="m 70,67 h -40 c 0,0 -7.5,-0.802118 -7.5,-8.365747 0,-7.563629 7.5,-8.634253 7.5,-8.634253 h 20"
            )
    br

    //- box amount
    h1(style="font-size: 2rem; font-weight: 700") box amount 
    br
    .box-quantity 
        button(type='button').minus -
        .box-qc
            input(type="text" value="1" min="1" max="1000" class='ip-value')
            p.count-number.number-change 1
        button(type='button').plus +
    br

    //- breadcrumb
    h1(style="font-size: 2rem; font-weight: 700") breadcrumb
    br

    ul.breadcrumbs-list.d-flex
        li.breadcrumbs-item
            a(href="").breadcrumbs-link Trang chá»§
        li.breadcrumbs-item
            a(href="").breadcrumbs-link Mua acc random

    br
    //- rating star
    h1(style="font-size: 2rem; font-weight: 700") rating
    +stars()

    //- overlay
    .overlay

    