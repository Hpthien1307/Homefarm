    -title = 'Template'
    -mainClass = 'page-template'
    -bodyClass = ''
    -hdClass = ''
header.hd(class=hdClass)
  .hd-up
    .container 
      .hd-up-wr
        .hd-bar.hamBlock
          .ham.hamTarget
            svg(
              viewBox="0 0 100 100" 
              class="menu-svg"
              )
              path(
                d="m 30,33 h 40 c 3.722839,0 7.5,3.126468 7.5,8.578427 0,5.451959 -2.727029,8.421573 -7.5,8.421573 h -20"
                )
              path.path-2(d="m 30,50 h 40")
              path(
                d="m 70,67 h -40 c 0,0 -7.5,-0.802118 -7.5,-8.365747 0,-7.563629 7.5,-8.634253 7.5,-8.634253 h 20"
            )
        .hd-logo
          a(href="").custom-logo-link
            +img('logo.png')
        +formSearch('Tìm kiếm sản phẩm')
        .hd-action 
          +boxActHd('fa-solid fa-phone','Hỗ trợ khách hàng','02471081008','sup')
          +boxActHd('fa-solid fa-user','Tài khoản','Đăng nhập','acount')
          +cart('Giỏ hàng', '0')
.sub-hd
  .container 
    .hd-bot-wr.row
        .col-3
            .col-flex
                .bar   
                    span.line 
                    span.line 
                    span.line 
                .bar-txt Danh sách sản phẩm
        .col-9 
            .col-flex 
                ul.menu-list 
                    -
                        var arrays = [
                            {
                                icon: 'star.png',
                                txt: 'Hệ thống cửa hàng 200+',
                            },
                            {
                                icon: 'star.png',
                                txt: 'Mẹo hay',
                            },
                            {
                                icon: 'heart.png',
                                txt: 'Chương trình khuyến mãi',
                            },
                            {
                                icon: 'star-gr.png',
                                txt: 'Tuyển dụng',
                            },
                        ];
                    each arr in arrays 
                        li.menu-item 
                            a.menu-link(href="")
                                span.ic 
                                    +img(arr.icon)
                                = arr.txt  

